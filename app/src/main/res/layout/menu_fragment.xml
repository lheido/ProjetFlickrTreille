<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/app_background">
    <TextView
        android:id="@+id/action_favorite_image"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/action_favorite_profile"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <!-- Settings -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/navigation_drawer_settings"
        android:gravity="end"
        android:textSize="24sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="0dp"
        android:textColor="@color/navigation_drawer_text"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/navigation_drawer_separator"
        android:layout_marginBottom="10dp"
        />
    <CheckedTextView
        android:id="@+id/settings_tags_or_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/settings_tags_or_text"
        android:textColor="@color/navigation_drawer_text"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:gravity="center"
        android:checked="true"
        />
    <!--android:background="@drawable/navigation_drawer_item"-->
    <CheckedTextView
        android:id="@+id/settings_hd_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/settings_hd_image"
        android:textColor="@color/navigation_drawer_text"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:gravity="center"
        android:checked="true"
        />
    <!--android:background="@drawable/navigation_drawer_item"-->

    <CheckedTextView
        android:id="@+id/settings_auto_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/settings_auto_login"
        android:textColor="@color/navigation_drawer_text"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:gravity="center"
        android:checked="true"
        />
</LinearLayout>